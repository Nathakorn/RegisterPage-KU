<div ng-controller = "userProfileController">	
	<div class="row">
        <div class="col-sm-12">
            <h3>Hello! {{userProfile.firstName}}</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-2 col-sm-offset-1">
            <h4>Firstname: </h4>
        </div>
        <div class="col-sm-4">    
            <h4>{{userProfile.firstName}}</h4>
        </div>
        <div class="col-sm-2">
            <h4>ID: </h4>
        </div>
        <div class="col-sm-3">    
            <h4>{{ID}}</h4>
        </div>
	</div>
	<div class="row">
        <div class="col-sm-2 col-sm-offset-1">
            <h4>Surname: </h4>
        </div>
        <div class="col-sm-4">    
            <h4>{{userProfile.surName}}</h4>
        </div>
	</div>
	<div class="row">
        <div class="col-sm-2 col-sm-offset-1">
            <h4>Gender: </h4>
        </div>
        <div class="col-sm-4">    
            <h4>{{userProfile.sex}}</h4>
        </div>
	</div>
</div>
